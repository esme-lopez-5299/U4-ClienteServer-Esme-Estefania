<UserControl x:Class="PokemonWPF.Views.VerDetallePokemon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokemonWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="900" >
    <Grid Background="#50000000">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="300" MinWidth="300" Background="White">
            <StackPanel Margin="10">
                <TextBlock>Nombre:</TextBlock>
                <TextBox  Text="{Binding PokemonParameter.name}" ></TextBox>
                <TextBlock>Contenido:</TextBlock>
                <TextBox AcceptsReturn="True" Height="60" Text=""></TextBox>
                <TextBlock>Prioridad:</TextBlock>
                

                <TextBlock Margin="10" Foreground="Red" FontSize="10" Text="{Binding Mensaje}"></TextBlock>

                <WrapPanel Margin="0, 10">
                    <Button Command="{Binding CancelarCommand}" Margin="10,0">Cancelar</Button>
                </WrapPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
